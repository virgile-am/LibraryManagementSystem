<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="src.main.java.com.library.controller.BookController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Title"/>
    <TextField fx:id="titleField"/>
    <Label text="Author"/>
    <TextField fx:id="authorField"/>
    <Label text="Publisher"/>
    <TextField fx:id="publisherField"/>
    <Label text="Year"/>
    <TextField fx:id="yearField"/>
    <Label text="ISBN"/>
    <TextField fx:id="isbnField"/>
    <Label text="Category"/>
    <TextField fx:id="categoryField"/>
    <Label text="Quantity"/>
    <TextField fx:id="quantityField"/>
    <Button text="Add Book" onAction="#handleAddBook"/>
    <TableView fx:id="bookTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Title" fx:id="titleColumn"/>
            <TableColumn text="Author" fx:id="authorColumn"/>
            <TableColumn text="Publisher" fx:id="publisherColumn"/>
            <TableColumn text="Year" fx:id="yearColumn"/>
            <TableColumn text="ISBN" fx:id="isbnColumn"/>
            <TableColumn text="Category" fx:id="categoryColumn"/>
            <TableColumn text="Quantity" fx:id="quantityColumn"/>
            <TableColumn text="Edit" fx:id="editColumn"/>
            <TableColumn text="Delete" fx:id="deleteColumn"/>
        </columns>
    </TableView>
</VBox>
