<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.com.library.controller.TransactionController">
    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <ComboBox fx:id="bookComboBox" promptText="Select Book" />
            <ComboBox fx:id="patronComboBox" promptText="Select Patron" />
            <DatePicker fx:id="issueDatePicker" promptText="Issue Date" />
            <DatePicker fx:id="dueDatePicker" promptText="Due Date" />
            <ComboBox fx:id="statusComboBox" promptText="Status" />
            <Button text="Add Transaction" onAction="#handleAddTransaction" />
            <Button text="Update Status" onAction="#handleUpdateTransactionStatus" />
            <TableView fx:id="transactionTableView" prefHeight="300">
                <columns>
                    <TableColumn text="Transaction ID" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="transactionID"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Book ID" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="bookID"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Patron ID" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="patronID"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Issue Date" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="issueDate"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Due Date" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="dueDate"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Return Date" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="returnDate"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Status" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="status"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
